{% extends 'base.html.twig' %}

{% block title %}S√©lection de Combat - Pok√©mon{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">ü•ä S√©lection de Combat Pok√©mon</h1>
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Instructions</h5>
            <p class="card-text">
                S√©lectionnez deux Pok√©mon diff√©rents pour organiser un combat ! 
                Cliquez sur "S√©lectionner" sous chaque Pok√©mon pour les choisir.
            </p>
        </div>
    </div>

    <div id="selected-pokemon" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">üî¥ Pok√©mon 1</h5>
                    </div>
                    <div class="card-body" id="pokemon1-selection">
                        <p class="text-muted">Aucun Pok√©mon s√©lectionn√©</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">üîµ Pok√©mon 2</h5>
                    </div>
                    <div class="card-body" id="pokemon2-selection">
                        <p class="text-muted">Aucun Pok√©mon s√©lectionn√©</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-3">
            <button id="battle-btn" class="btn btn-success btn-lg" disabled>
                ‚öîÔ∏è Commencer le Combat !
            </button>
        </div>
    </div>

    <h3>Liste des Pok√©mon disponibles</h3>
    
    <div class="row">
        {% for pokemon in pokemon_list %}
            <div class="col-md-4 col-lg-3 mb-3">
                <div class="card h-100 {% if pokemon.name == selected_pokemon1 or pokemon.name == selected_pokemon2 %}border-success bg-light{% endif %}">
                    <div class="card-body text-center">
                        <h6 class="card-title">
                            {{ pokemon.name|title }}
                            {% if pokemon.name == selected_pokemon1 %}
                                <span class="badge bg-primary">Pok√©mon 1</span>
                            {% elseif pokemon.name == selected_pokemon2 %}
                                <span class="badge bg-danger">Pok√©mon 2</span>
                            {% endif %}
                        </h6>
                        <div class="btn-group-vertical w-100">
                            <button class="btn {% if pokemon.name == selected_pokemon1 %}btn-primary{% else %}btn-outline-primary{% endif %} btn-sm select-pokemon" 
                                    data-pokemon="{{ pokemon.name }}" 
                                    data-position="1"
                                    {% if pokemon.name == selected_pokemon2 %}disabled title="D√©j√† s√©lectionn√© comme Pok√©mon 2"{% endif %}>
                                {% if pokemon.name == selected_pokemon1 %}
                                    ‚úì S√©lectionn√© comme Pok√©mon 1
                                {% else %}
                                    S√©lectionner comme Pok√©mon 1
                                {% endif %}
                            </button>
                            <button class="btn {% if pokemon.name == selected_pokemon2 %}btn-danger{% else %}btn-outline-danger{% endif %} btn-sm select-pokemon" 
                                    data-pokemon="{{ pokemon.name }}" 
                                    data-position="2"
                                    {% if pokemon.name == selected_pokemon1 %}disabled title="D√©j√† s√©lectionn√© comme Pok√©mon 1"{% endif %}>
                                {% if pokemon.name == selected_pokemon2 %}
                                    ‚úì S√©lectionn√© comme Pok√©mon 2
                                {% else %}
                                    S√©lectionner comme Pok√©mon 2
                                {% endif %}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Pagination -->
    {% if total_pages > 1 %}
        <nav aria-label="Navigation des pages">
            <ul class="pagination justify-content-center">
                {% if has_previous %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('pokemon.battle.select', {
                            'page': previous_page,
                            'pokemon1': selected_pokemon1,
                            'pokemon2': selected_pokemon2
                        }) }}">Pr√©c√©dent</a>
                    </li>
                {% endif %}

                {% for page in range(max(1, current_page - 2), min(total_pages, current_page + 2)) %}
                    <li class="page-item {{ page == current_page ? 'active' : '' }}">
                        <a class="page-link" href="{{ path('pokemon.battle.select', {
                            'page': page,
                            'pokemon1': selected_pokemon1,
                            'pokemon2': selected_pokemon2
                        }) }}">{{ page }}</a>
                    </li>
                {% endfor %}

                {% if has_next %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('pokemon.battle.select', {
                            'page': next_page,
                            'pokemon1': selected_pokemon1,
                            'pokemon2': selected_pokemon2
                        }) }}">Suivant</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}

    <div class="text-center mt-4">
        <a href="{{ path('pokemon.index') }}" class="btn btn-secondary">
            ‚Üê Retour √† la liste des Pok√©mon
        </a>
    </div>
</div>

<!-- Donn√©es pour JavaScript -->
<script type="application/json" id="pokemon-selections">
{{ {
    'pokemon1': selected_pokemon1,
    'pokemon2': selected_pokemon2,
    'currentPage': current_page
} | json_encode | raw }}
</script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // R√©cup√©rer les s√©lections depuis le script JSON
    const selectionsData = JSON.parse(document.getElementById('pokemon-selections').textContent);
    let selectedPokemon = {
        pokemon1: selectionsData.pokemon1,
        pokemon2: selectionsData.pokemon2
    };
    const currentPage = selectionsData.currentPage;

    console.log('S√©lections charg√©es:', selectedPokemon); // Debug

    const battleBtn = document.getElementById('battle-btn');
    const pokemon1Selection = document.getElementById('pokemon1-selection');
    const pokemon2Selection = document.getElementById('pokemon2-selection');

    // Initialiser l'affichage avec les s√©lections existantes
    updateDisplay();

    document.querySelectorAll('.select-pokemon').forEach(button => {
        // V√©rifier si le bouton n'est pas d√©sactiv√©
        if (button.disabled) return;
        
        button.addEventListener('click', function() {
            const pokemonName = this.dataset.pokemon;
            const position = this.dataset.position;
            const key = 'pokemon' + position;

            // Mettre √† jour la s√©lection
            selectedPokemon[key] = pokemonName;

            // Rediriger vers la m√™me page avec les nouveaux param√®tres
            const params = new URLSearchParams();
            params.set('page', currentPage);
            if (selectedPokemon.pokemon1) params.set('pokemon1', selectedPokemon.pokemon1);
            if (selectedPokemon.pokemon2) params.set('pokemon2', selectedPokemon.pokemon2);

            window.location.href = "{{ path('pokemon.battle.select') }}?" + params.toString();
        });
    });

    function updateDisplay() {
        // Mettre √† jour Pok√©mon 1
        if (selectedPokemon.pokemon1) {
            pokemon1Selection.innerHTML = `
                <div class="d-flex align-items-center justify-content-between">
                    <strong>${selectedPokemon.pokemon1.charAt(0).toUpperCase() + selectedPokemon.pokemon1.slice(1)}</strong>
                    <button class="btn btn-sm btn-outline-secondary clear-selection" data-position="1">
                        ‚úï
                    </button>
                </div>
            `;
        } else {
            pokemon1Selection.innerHTML = '<p class="text-muted">Aucun Pok√©mon s√©lectionn√©</p>';
        }

        // Mettre √† jour Pok√©mon 2
        if (selectedPokemon.pokemon2) {
            pokemon2Selection.innerHTML = `
                <div class="d-flex align-items-center justify-content-between">
                    <strong>${selectedPokemon.pokemon2.charAt(0).toUpperCase() + selectedPokemon.pokemon2.slice(1)}</strong>
                    <button class="btn btn-sm btn-outline-secondary clear-selection" data-position="2">
                        ‚úï
                    </button>
                </div>
            `;
        } else {
            pokemon2Selection.innerHTML = '<p class="text-muted">Aucun Pok√©mon s√©lectionn√©</p>';
        }

        // Ajouter les √©v√©nements de suppression
        document.querySelectorAll('.clear-selection').forEach(button => {
            button.addEventListener('click', function() {
                const position = this.dataset.position;
                const key = 'pokemon' + position;
                
                // Supprimer la s√©lection
                selectedPokemon[key] = null;

                // Rediriger vers la m√™me page sans ce param√®tre
                const params = new URLSearchParams();
                params.set('page', currentPage);
                if (selectedPokemon.pokemon1) params.set('pokemon1', selectedPokemon.pokemon1);
                if (selectedPokemon.pokemon2) params.set('pokemon2', selectedPokemon.pokemon2);

                window.location.href = "{{ path('pokemon.battle.select') }}?" + params.toString();
            });
        });

        updateBattleButton();
    }

    function updateBattleButton() {
        if (selectedPokemon.pokemon1 && selectedPokemon.pokemon2 && selectedPokemon.pokemon1 !== selectedPokemon.pokemon2) {
            battleBtn.disabled = false;
            battleBtn.onclick = function() {
                window.location.href = "{{ path('pokemon.battle.fight') }}?pokemon1=" + 
                    encodeURIComponent(selectedPokemon.pokemon1) + 
                    "&pokemon2=" + encodeURIComponent(selectedPokemon.pokemon2);
            };
        } else {
            battleBtn.disabled = true;
            battleBtn.onclick = null;
        }
    }
});
</script>
{% endblock %}